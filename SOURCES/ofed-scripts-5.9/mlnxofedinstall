    if ($arch =~ /i[0-9]86/ and $MLNX_OFED_ARCH ne "i686" or
        $arch !~ /i[0-9]86/ and $MLNX_OFED_ARCH ne $arch) {
        print RED "Error: This package is intended for a $MLNX_OFED_ARCH architecture" , RESET "\n";
        exit $PREREQUISIT;
    }
}

